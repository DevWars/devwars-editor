{
    "name": "devwars-live",
    "version": "0.0.0",
    "description": "watch.devwars.tv portion of the DevWars site",
    "main": "src/server/index.js",
    "author": "Kim Simonsen",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/DevWars/devwars-live"
    },
    "scripts": {
        "start": "node src/server",
        "prebuild": "npm run lint",
        "build": "cross-env NODE_ENV=production webpack --mode production",
        "watch": "concurrently -kr \"npm run watch:client\" \"npm run watch:server\"",
        "watch:client": "webpack -w --mode development",
        "watch:server": "onchange -i \"src/(server|shared)/**/*\" -- node src/server"
    },
    "devDependencies": {
        "@babel/core": "^7.9.0",
        "@babel/plugin-proposal-object-rest-spread": "^7.9.0",
        "@babel/polyfill": "^7.8.7",
        "@babel/preset-env": "^7.9.0",
        "autoprefixer": "^9.7.5",
        "babel-loader": "^8.1.0",
        "babel-plugin-lodash": "^3.3.4",
        "concurrently": "^4.1.2",
        "copy-webpack-plugin": "^4.6.0",
        "cross-env": "^5.2.1",
        "css-loader": "^2.1.1",
        "cssnano": "^4.1.10",
        "extract-text-webpack-plugin": "^4.0.0-beta.0",
        "mini-css-extract-plugin": "^0.5.0",
        "monaco-editor": "^0.20.0",
        "node-sass": "^4.13.1",
        "onchange": "^5.2.0",
        "postcss-loader": "^3.0.0",
        "sass-loader": "^7.3.1",
        "vue": "^2.6.11",
        "vue-loader": "^15.9.1",
        "vue-material-design-icons": "^2.8.0",
        "vue-router": "^3.1.6",
        "vue-template-compiler": "^2.6.11",
        "vuex": "^3.1.3",
        "webpack": "^4.42.1",
        "webpack-cli": "^3.3.11"
    },
    "dependencies": {
        "ajv": "^6.12.0",
        "axios": "^0.18.1",
        "config": "^3.3.1",
        "cookie": "^0.3.1",
        "dotenv": "^6.2.0",
        "ejs": "^2.7.4",
        "express": "^4.17.1",
        "firebase-admin": "^6.5.1",
        "helmet": "^3.22.0",
        "lodash": "^4.17.15",
        "socket.io": "^2.3.0"
    },
    "browserslist": [
        "chrome >= 58",
        "edge >= 16",
        "firefox >= 52",
        "safari >= 11"
    ],
    "postcss": {
        "plugins": {
            "autoprefixer": true,
            "cssnano": true
        }
    }
}
